#! /bin/bash

set -euo pipefail

systemd-run --scope --user podman exec engelsystem_dev_es_workspace_1 git config --global --add safe.directory /var/www

systemd-run --scope --user podman exec engelsystem_dev_es_workspace_1 composer run phpcs
systemd-run --scope --user podman exec engelsystem_dev_es_workspace_1 composer phpstan
systemd-run --scope --user podman exec engelsystem_dev_es_workspace_1 composer phpunit
